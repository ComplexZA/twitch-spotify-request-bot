{
  "name": "twitch-spotify-request",
  "version": "4.3.0",
  "description": "Bot to scrape Twitch chat for Spotify links, then add them to a playlist",
  "main": "dist/index.js",
  "scripts": {
    "test": "mocha",
    "test:watch": "mocha --watch",
    "coverage": "nyc yarn test",
    "coverage:check": "nyc --check-coverage yarn test",
    "build": "yarn run tsc",
    "tsc": "tsc",
    "start": "node dist/index.js",
    "dev": "yarn run build && yarn start",
    "start:dev": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/index.ts",
    "lint": "eslint .",
    "lint:fix": "yarn run lint --fix",
    "format": "prettier -c .",
    "format:fix": "yarn run format --write",
    "lint:staged": "lint-staged --allow-empty",
    "husky:prepare": "husky install"
  },
  "engines": {
    "node": ">=14.x"
  },
  "author": "Marc Donald",
  "license": "MIT",
  "dependencies": {
    "dotenv": "8.6.0",
    "env-smart": "2.2.0",
    "express": "4.17.1",
    "fs": "0.0.1-security",
    "spotify-web-api-node": "5.0.2",
    "tmi.js": "1.8.3"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@types/chai": "^4.3.0",
    "@types/chai-as-promised": "^7.1.4",
    "@types/expect": "^24.3.0",
    "@types/express": "4.17.12",
    "@types/mocha": "^9.1.0",
    "@types/node": "14.17.1",
    "@types/spotify-web-api-node": "5.0.2",
    "@types/tmi.js": "1.7.1",
    "@typescript-eslint/eslint-plugin": "5.10.2",
    "@typescript-eslint/parser": "5.10.1",
    "chai": "^4.3.6",
    "chai-as-promised": "^7.1.1",
    "eslint": "8.7.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-config-standard": "16.0.3",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "2.25.4",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-promise": "6.0.0",
    "eslint-plugin-standard": "5.0.0",
    "expect": "^27.5.0",
    "husky": "7.0.4",
    "lint-staged": "12.3.3",
    "mocha": "^9.2.0",
    "nodemon": "2.0.13",
    "nyc": "^15.1.0",
    "prettier": "2.0.5",
    "sinon-chai": "^3.7.0",
    "source-map-support": "^0.5.21",
    "ts-node": "8.10.2",
    "ts-sinon": "^2.0.2",
    "typescript": "3.9.7"
  }
}
